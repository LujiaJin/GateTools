import gatetools as gt
import click
import itk

CONTEXT_SETTINGS = dict(help_option_names=['-h', '--help'])
@click.command(context_settings=CONTEXT_SETTINGS)
@click.option('-o', '--output', type=str, required=True, help='Output image name')
@click.option('-p', '--pixeltype', type=str, help='Pixel type conversion')
@click.argument('input', type=str, required=True, nargs=-1)

def gate_image_convert(input, output, pixeltype):
    """
    \b
    Convert the input to the output with pixeltype. If pixeltype is not set, the output has the same pixel type than the input.
    Available format:
        - 2D:
            - .bmp
            - .jpeg
            - .png
        - 3D:
            - .mhd
            - .nii
            - .nhdr, .nrrd
            - .tiff
    Available pixel type
        - unsigned char
        - signed short
        - unsigned short
        - float
    To convert Dicom to another format, set the folder fullpath containing the .dcm files as input; eg:
        -i ~/path/to/dcm/*dcm
        -i ~/path/to/dcm/toto.dcm
    """

    #Read input
    if len(input) == 1:
        inputImage = itk.imread(input)
    elif len(input) > 1:
        inputImage = gt.read_dicom(input)
    else:
        print("ERROR: no input available")
        return

    # convert image
    outputImage = gt.image_convert(inputImage, pixeltype)

    # write file
    itk.imwrite(outputImage, output)

if __name__ == '__main__':
    gate_image_convert()

